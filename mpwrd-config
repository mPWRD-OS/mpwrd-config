#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_BIN="${SCRIPT_DIR}/.venv/bin/python"
if [ ! -x "$PYTHON_BIN" ]; then
  PYTHON_BIN="python3"
fi

if [ "${EUID}" -ne 0 ]; then
  exec sudo -E PYTHONPATH="${SCRIPT_DIR}${PYTHONPATH:+:$PYTHONPATH}" "$PYTHON_BIN" -m mpwrd_config.tui_entry "$@"
fi

exec env PYTHONPATH="${SCRIPT_DIR}${PYTHONPATH:+:$PYTHONPATH}" "$PYTHON_BIN" -m mpwrd_config.tui_entry "$@"
